{
  "name": "spotify-playlist-janitor-web",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "coverage": "react-scripts test --coverage --ci --watchAll=false .",
    "coverage-badge": "react-scripts test --coverage --ci --watchAll=false"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "resetMocks": false,
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/reportWebVitals.ts",
      "!src/**/*.d.{ts,tsx}",
      "!src/**/*-types.{ts,tsx}",
      "!src/**/*-styles.ts",
      "!src/shared/mock-data/*.{ts,tsx}",
      "!src/shared/constants/*.{ts,tsx}",
      "!src/**/index.{ts,tsx}"
    ],
    "testMatch": [
      "**/*.test.{ts,tsx}"
    ],
    "coverageReporters": ["cobertura", "text-summary"]
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^4.9.5",
    "web-vitals": "^3.1.0"
  },
  "devDependencies": {
    "@testing-library/dom": "^8.19.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.2.3",
    "@types/node": "^18.11.10",
    "@types/react": "^18.0.25",
    "@types/react-dom": "^18.0.9",
    "@types/react-router-dom": "^5.3.3",
    "@types/yup": "^0.32.0",
    "husky": "^8.0.2",
    "lint-staged": "^13.0.4",
    "popper-max-size-modifier": "^0.2.0",
    "prettier": "^2.8.0",
    "react-scripts": "^5.0.1"
  }
}
